{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "preDistTag": "next"
    },
    "version": {
      "conventionalCommits": true,
      "push": true,
      "exact": true,
      "gitTagVersion": true,
      "createRelease": "github",
      "allowBranch": "master",
      "message": "chore(release): publish new version"
    }
  },
  "ignoreChanges": ["**/*.md", "**/*.spec.ts", "**/*.spec.js"]
}
